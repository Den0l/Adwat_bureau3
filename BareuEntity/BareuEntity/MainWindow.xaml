<Window x:Class="BareuEntity.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BareuEntity"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <DataGrid x:Name="DataTable"  AutoGenerateColumns="False" >
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding LawyerSurname}" Header="Фамилия Адвоката"/>
                <DataGridTextColumn Binding="{Binding LawyerName}" Header="Имя Адвоката"/>
                <DataGridTextColumn Binding="{Binding LawyerMiddleName}" Header="Отчество Адвоката"/>
                <DataGridTextColumn Binding="{Binding Clients.ClientName}" Header="Фамилия Клиента"/>
                <DataGridTextColumn Binding="{Binding Clients.ClientSurname}" Header="Имя Клиента"/>
                <DataGridTextColumn Binding="{Binding Clients.ClientMiddleName}" Header="Отчество Клиента"/>
            </DataGrid.Columns>
        </DataGrid>


    </Grid>
</Window>
